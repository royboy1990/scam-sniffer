{
  "manifest_version": 3,
  "name": "ScamSniff â€“ Smart Scam Message Detector",
  "version": "1.0.0",
  "description": "Detect potential scam messages on LinkedIn and Fiverr",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.fiverr.com/*",
         "*://*.facebook.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 