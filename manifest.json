{
  "manifest_version": 3,
  "name": "ScamSniff",
  "version": "1.0.0",
  "description": "Detect potential scam messages on LinkedIn and Fiverr",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.fiverr.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 